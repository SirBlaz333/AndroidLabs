<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FindBeerActivity">

    <Spinner
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:id="@+id/beer_spinner"
            android:entries="@array/beer_colors"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/find_beer_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="191dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="94dp"
            android:layout_marginEnd="97dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/find_beer_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:id="@+id/find_beer_button"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/beer_spinner"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toTopOf="@+id/beer_type_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/beer_type_text_view"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/find_beer_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="94dp"
            android:layout_marginEnd="97dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="343dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>